					<div class="col-md-3 col-sm-3 col-xs-3 inf_menu">
						<div class="inf_bootom">
							
						</div>		
					</div>
					<div class="col-md-6 col-sm-6 col-xs-6">
						<div class="logo">
							<a href="#">
                <%= image_tag "application/logo.png", alt: "alt" %>
              </a>
						</div>
					</div>
					<div class="col-md-3 col-sm-3 col-xs-3 soc_inf">
						<div class="ob_inf">
                            <%= other_locale_link %>
							<p class="soc_icon">
								<a class="hf" href="#"></a>
